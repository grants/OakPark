<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/sup_share_wechat"
        android:src="@mipmap/ic_share_wechat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/bg_ac_btn"/>

    <ImageView
        android:id="@+id/sup_share_weibo"
        android:src="@mipmap/ic_share_weibo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/bg_ac_btn"/>

    <ImageView
        android:id="@+id/sup_share_qq"
        android:src="@mipmap/ic_share_qq"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="13dp"
        android:background="@drawable/bg_ac_btn"/>

</LinearLayout>