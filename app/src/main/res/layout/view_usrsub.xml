<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_usrsub"
    android:background="@color/translight">

    <me.laudoak.oakpark.ui.circle.CircleImageView
        android:id="@+id/usrsub_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/gray_1"/>

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="2dp">

        <TextView
            style="@style/UsrSubNick"
            android:id="@+id/usrsub_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:focusableInTouchMode="true"/>

        <me.laudoak.oakpark.ui.text.FluidTextView
            style="@style/UsrSubSign"
            android:id="@+id/usrsub_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:focusable="true"/>

    </LinearLayout>

    <me.laudoak.oakpark.view.FollowButtonView
        android:id="@+id/usrsub_followbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="4dp"/>

</LinearLayout>