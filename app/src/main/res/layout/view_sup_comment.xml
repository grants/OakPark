<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.laudoak.oakpark.ui.loani.ProgressWheel
        android:id="@+id/sup_comment_loani"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        wheel:matProg_barColor="@color/gray_7"
        wheel:matProg_barWidth="2dp"/>

    <me.laudoak.oakpark.ui.paging.PagingListView
        android:id="@+id/sup_comment_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0.5dp"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:divider="@null"/>


    <TextView
        android:text="Hello"
        android:id="@+id/sup_comment_load_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:layout_below="@+id/sup_comment_lv"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/sup_comment_comment"
        android:src="@mipmap/ic_add"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:padding="6dp"
        android:background="@drawable/bg_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>


</RelativeLayout>