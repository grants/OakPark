<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <include layout="@layout/view_actionbar_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bulbul_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            fresco:placeholderImage ="@color/window_background"
            fresco:roundingBorderWidth="1dp"
            fresco:roundingBorderColor="@color/gray_7"
            fresco:roundWithOverlayColor="@color/white"
            fresco:roundAsCircle="true"/>

        <me.laudoak.oakpark.ui.fittext.AutofitTextView
            android:id="@+id/bulbul_nick"
            style="@style/BulbulNick"
            android:hint="昵称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            autofit:minTextSize="20sp"
            autofit:sizeToFit="true"/>

        <me.laudoak.oakpark.ui.fittext.AutofitTextView
            android:id="@+id/bulbul_email"
            style="@style/BulbulOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            autofit:minTextSize="14sp"
            autofit:sizeToFit="true"/>

        <me.laudoak.oakpark.ui.fittext.AutofitTextView
            android:id="@+id/bulbul_num"
            style="@style/BulbulOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            autofit:minTextSize="14sp"
            autofit:sizeToFit="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:layout_margin="15dp">


        <TextView
            android:id="@+id/bulbul_social_notice"
            android:text="绑定账号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bulbul_qq"
                android:src="@mipmap/ic_share_qq"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="15dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/bg_btn_tpl" />


            <ImageView
                android:id="@+id/bulbul_weixin"
                android:src="@mipmap/ic_share_wechat"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="11dp"
                android:visibility="gone"
                android:layout_marginRight="18dp"
                android:background="@drawable/bg_btn_tpl" />

            <me.laudoak.oakpark.soci.tplogin.weibo.LoginButton
                android:id="@+id/bulbul_weibo"
                android:src="@mipmap/ic_share_weibo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="12dp"
                android:background="@drawable/bg_btn_tpl" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bulbul_logout"
        style="@style/CustomButton"
        android:text="退出登录"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>