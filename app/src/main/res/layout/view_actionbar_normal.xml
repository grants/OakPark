<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/height_ac"
    android:layout_width="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ca_normal_back"
        android:src="@mipmap/ic_close"
        android:background="@drawable/bg_btn_back"
        android:padding="12dp"
        android:layout_width="@dimen/height_ac"
        android:layout_height="@dimen/height_ac" />

    <TextView
        android:id="@+id/ca_normal_title"
        style="@style/CATitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ca_normal_back"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/ca_normal_done"
        android:text="确定"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_ac"
        android:background="@drawable/bg_btn_back"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="12dp"/>


</RelativeLayout>