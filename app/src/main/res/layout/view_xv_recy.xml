<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/view_recy_load_failed"
        android:text="获取数据失败"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <me.laudoak.oakpark.widget.recy.RecyclerViewPager
        android:id="@+id/view_recy"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="52dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:clipToPadding="false"
        app:triggerOffset="0.1"
        android:background="@android:color/transparent"/>

    <me.laudoak.oakpark.widget.loani.ProgressWheel
        android:id="@+id/view_recy_loading"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="4dp"
        android:layout_gravity="center"
        wheel:matProg_barColor="@color/gray_3"
        wheel:matProg_progressIndeterminate="true" />

</FrameLayout>