<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/tools">

    <me.laudoak.oakpark.widget.recy.RecyclerViewPager
        android:layout_marginTop="5dp"
        android:layout_marginBottom="52dp"
        android:id="@+id/view_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clipToPadding="false"
        app:triggerOffset="0.1"/>

    <me.laudoak.oakpark.widget.loani.ProgressWheel
        android:id="@+id/view_recy_loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="4dp"
        wheel:matProg_barColor="@color/gray_7"
        wheel:matProg_progressIndeterminate="true"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/view_recy_load_failed"
        android:text="获取数据失败"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>