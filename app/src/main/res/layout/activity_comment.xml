<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/view_actionbar_normal"
        android:id="@+id/ac_comment"/>

    <me.laudoak.oakpark.ui.fittext.AutofitTextView
        android:id="@+id/activity_comment_comment"
        style="@style/WhisperActivityEditor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ac_comment"
        android:hint="@string/activity_comment_hint_comment"
        autofit:minTextSize="18sp"
        autofit:sizeToFit="true"/>
</RelativeLayout>