<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/window_background">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_outer_app_bar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/activity_outer_collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/activity_outer_cover"
                android:src="@drawable/sower"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <FrameLayout
                android:id="@+id/activity_outer_cover_title_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_usrsub"
                android:layout_gravity="bottom|center_horizontal"
                app:layout_collapseMode="parallax">

                <include layout="@layout/view_usrsub"/>

            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_outer_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways"
                android:theme="@style/ToolBarStyle"
                app:theme="@style/ToolBarStyle">


                <TextView
                    android:id="@+id/activity_outer_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:visibility="invisible"/>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_outer_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    <me.laudoak.oakpark.view.LvStateView
        android:gravity="center"
        android:id="@+id/activity_outer_lvsta"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</android.support.design.widget.CoordinatorLayout>
