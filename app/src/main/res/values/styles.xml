<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
    </style>

    <style name="ValidateEdittext" parent="Base.Widget.AppCompat.EditText">
        <item name="android:typeface">monospace</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TitleEditor" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_8</item>
        <item name="android:textSize">22sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AuthorEditor" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="VerseEditor" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@drawable/bg_button_text_color</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/gray_7</item>
    </style>

</resources>
