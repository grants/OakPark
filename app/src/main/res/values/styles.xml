<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="HelloTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CustomActionBarTitle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/gray_7</item>
    </style>

    <style name="ValidateEdittext" parent="Base.Widget.AppCompat.EditText">
        <item name="android:typeface">monospace</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TitleEditor" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_8</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TimeText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">21sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AuthorEditor" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="VerseEditor" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WhisperEditor" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WhisperActivityEditor" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">24</item>
    </style>

    <!-- -->
    <style name="ItemDateText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkergreen</item>
        <item name="android:textSize">9sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTitleText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ItemAuthorText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:textSize">9sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ItemVerseText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/gray_5</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>


    <!-- XVerse-->
    <style name="XVerseTitleText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:editable">false</item>
    </style>

    <style name="XVerseAuthorText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:editable">false</item>
    </style>

    <style name="XVerseVerseText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/gray_5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:editable">false</item>
    </style>


    <!-- Printer-->
    <style name="PrinterTitleText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PrinterAuthorText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="PrinterVerseText" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/gray_11</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>



    <!-- Drawer Text-->
    <style name="DrawerNick" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:textSize">19sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DrawerNumber" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <!-- Bulbul Text-->
    <style name="BulbulNick" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_8</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BulbulOther" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:editable">false</item>
    </style>

    <style name="SettingText" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- SUPHead Date Text-->
    <style name="SUPDateText" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/darkergreen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SUPNickText" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@color/gray_5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SUPCommentDateText" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textSize">11sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SUPWhisperText" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="CommentText" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/gray_7</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- -->

    <style name="EditorButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/gray_8</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@drawable/bg_button_text_color</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/gray_7</item>
    </style>

</resources>
